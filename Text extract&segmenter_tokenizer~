------------------------------------------------------------------
$for n in *.tokenized; do cat $n | tr " " "\n" > $n.tokenized_2; done;
------------------------------------------------------------------

------------------------------------------------------------------
for n in *.tokenized_2; do ./hunpos-tag model_98_accuracy < $n > $n.pos-tagged; done;
